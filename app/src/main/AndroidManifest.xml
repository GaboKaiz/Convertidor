<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/convertidor"
        android:label="@string/app_name"
        android:roundIcon="@drawable/convertidor"
        android:supportsRtl="true"
        android:theme="@style/Theme.ConversorUnidades"
        tools:targetApi="31">
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registrar ChatPrincipal -->
        <activity
            android:name=".ui.ChatPrincipal"
            android:exported="true"/>

        <activity
            android:name=".ui.Temperatura"
            android:exported="true"/>

        <activity
            android:name=".ui.Moneda"
            android:exported="true"/>

        <activity
            android:name=".ui.Longitud"
            android:exported="true"/>



    </application>

</manifest>