<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_gradiente"
    tools:context=".ui.MainActivity">

    <!-- Logo -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:src="@drawable/pinguino"
        app:layout_constraintBottom_toTopOf="@+id/txtTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <!-- Título -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONVERSOR-GABINHO"
        android:textColor="@android:color/white"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintBottom_toTopOf="@+id/txtSubtitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.5" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/txtSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convierte unidades de manera rápida y sencilla"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        app:layout_constraintTop_toBottomOf="@id/txtTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Ícono de Temperatura -->

    <!-- Ícono de Moneda -->

    <!-- Ícono de Longitudes -->
    <ImageView
        android:id="@+id/iconoTemperatura"
        android:layout_width="179dp"
        android:layout_height="217dp"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:contentDescription="Conversor de Temperatura"
        android:focusable="true"
        android:src="@drawable/temperatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitulo" />

    <ImageView
        android:id="@+id/iconoMoneda"
        android:layout_width="199dp"
        android:layout_height="206dp"
        android:layout_marginTop="272dp"
        android:clickable="true"
        android:contentDescription="Conversor de Moneda"
        android:focusable="true"
        android:src="@drawable/moendaactual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitulo" />

    <ImageView
        android:id="@+id/iconoLongitud"
        android:layout_width="227dp"
        android:layout_height="206dp"
        android:layout_marginTop="512dp"
        android:clickable="true"
        android:contentDescription="Conversor de Longitudes"
        android:focusable="true"
        android:src="@drawable/longitudicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtSubtitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>
